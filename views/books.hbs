<div class="row m-1">
    <div class="col-2">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <button type="button" class="btn btn-outline-primary" onclick="sort(this)" data-flag="books" data-url="/api/books/sort/title">
                Сортировать по названию
            </button>
        </div>
    </div>
    <div class="col-10">
        <div class = "container">
            <div class = "row" id="books">
                <div class = "container">
                    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#bookAddModal">
                        Add Books
                    </button>
                    <div id="searchBooks" class="form-inline my-2 my-lg-0 btn-card">
                        <input class="form-control mr-sm-2" type="search" id="search" placeholder="Search" aria-label="Search">
                        <button id="searchBtn" class="btn btn-outline-success my-2 my-sm-0" onclick="search(this)" data-flag="books" data-url="/api/books/search/" disabled>Search</button>
                    </div>
                </div>
                <div class="container body">
                    {{#each books}}
                    <div id="book-{{title}}" class="card mb-8" style="max-width: 740px;">
                        <div class="row g-0">
                            <div class="col-md-2">
                                <img class="book-img" src="/uploads/{{image}}">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{title}}</h5>
                                    <p class="card-text">{{description}}</p>
                                    <label>Авторы</label>
                                    {{#each authors}}
                                    <span class="badge badge-light">{{name}} {{lastname}} {{patronymic}}</span>
                                    {{/each}}
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="card-body">
                                    <div class="btn-group btn-card">
                                        <button type="button" class="btn btn-danger" onclick="deleteBook(this)" data-link="/api/books/{{_id}}">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
{{> createBook}}